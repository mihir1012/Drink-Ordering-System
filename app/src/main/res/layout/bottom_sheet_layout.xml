<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ITEM NAME"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:layout_marginStart="10dp"
        android:id="@+id/ItemName"
        />
    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/india"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="105dp"
        android:layout_marginStart="210dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:text="PriCe"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="230dp"
        android:layout_marginTop="100dp"
        android:id="@+id/ItemPrice"
        />
    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/button_up"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp"
        android:layout_marginStart="315dp"
        android:id="@+id/upButton"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:ems="2"
        android:inputType="number"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:layout_marginStart="310dp"
        android:id="@+id/EditNumber"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:hint="Enter Quantity"/>

    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/button_down"
        android:layout_below="@id/EditNumber"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="315dp"
        android:id="@+id/downButton"/>

    <Button
        android:id="@+id/ButtonBottom1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="90sp"
        android:text="ADD" />

    <Button
        android:id="@+id/ButtonBottom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="50sp"
        android:layout_toStartOf="@id/ButtonBottom1"
        android:text="Cancle" />
</RelativeLayout>